@model IEnumerable<Author>
    <div class="row">
        <div class="col-md-12">
            <h3>作者管理</h3>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>序号</th>
                        <th>作者</th>
                        <th>联系电话</th>
                        <th>Email</th>
                        <th>备注</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr id="table-tr-@x.Id">
                            <th>@x.Id</th>
                            <th>@x.AuthorName</th>
                            <th>@x.PhoneNumber</th>
                            <th>@x.Email</th>
                            <th>@x.Note</th>
                            @if (User.IsSignedIn())
                            {
                                <td>
                                    <a asp-action="EditAuthor" asp-controller="Admin" asp-route-id="@x.Id">修改</a>
                                    <a asp-action="CreatePhotos" asp-controller="Admin" asp-route-id="@x.Id">添加图片作品</a>
                                    <a asp-action="AuthorPhotos" asp-controller="Admin" asp-route-id="@x.Id">查看作品</a>
                                    <a href="javascript:remove(@x.Id)">删除</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
           <!-- Html.MakePager("pager-item", "active", "pager")-->
        </div>
    </div>
@if (User.IsSignedIn())
{
    <script src="~/scripts/jquery.min.js"></script>
    <script type="text/javascript">
        function remove(id) {
            var jug = confirm("确认删除？");
            if (jug == true) {
                    var url = "/Admin/DeleteAuthor";
                    var params = { "id": id };
                    $.post(url, params, function (data) {
                        if (data == "success") {
                            $("#table-tr-"+id).remove();
                            alert("删除成功");
                        }
                        else {
                            alert("删除失败");
                        }

                    });
            }
        }
    </script>
}
