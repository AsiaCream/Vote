@model IEnumerable<WebTitle>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div>
                <h3>前台标题管理</h3>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>序号</th>
                        <th>标题</th>
                        <th>描述</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr id="table-tr-@x.Id">
                            <th>@x.Id</th>
                            <th>@x.Title</th>
                            <th>@x.location</th>
                            @if (User.IsSignedIn())
                            {
                                <td>
                                    <a asp-action="EditWebTitle" asp-controller="Admin" asp-route-id="@x.Id">修改</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
