@model Photos
<table class="table table-hover">
    <thead>
        <tr>
            <th>照片ID</th>
            <th>照片标题</th>
            <th>作者</th>           
            <th>录入时间</th>
            <th>照片描述</th>
        </tr>
    </thead>
    <tbody>
        <tr id="table-tr">
            <th>@Model.Id</th>
            <th>@Model.PhotoName</th>
            <th>@Model.Author</th>
            <th>@Model.DateTime</th>
            <th>@Model.Discription</th>
        </tr>     
    </tbody>
</table>
<p></p>
<img src="~/upload/@Model.Path" alt="@Model.Discription"/>