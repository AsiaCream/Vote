@model IEnumerable<Photos>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>图片ID</th>
                        <th>图片标题</th>
                        <th>图片类别</th>
                        <th>作者</th>
                        <th>优先级</th>
                        <th>录入时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr id="table-tr-@x.Id">
                            <th>@x.Id</th>
                            <th>@x.Title</th>
                            <th>@x.Category</th>
                            <th>@x.Author.AuthorName</th>
                            <th>@x.Priority</th>
                            <th>@x.DateTime</th>

                            @if (User.IsSignedIn())
                            {
                                <td>
                                    <a asp-action="EditPhotos" asp-controller="Admin" asp-route-id="@x.Id">修改</a>
                                    <a href="javascript:void(0);" onclick="remov(@x.Id)">删除</a>
                                    <a asp-action="Photo" asp-controller="Admin" asp-route-id="@x.Id">查看详细</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            @Html.MakePager("pager-item", "", "pager")
        </div>
    </div>
</div>
<!--提示 分页没有实例-->
<!--Html.MakePager("pager-item", "active", "pager")-->
@if (User.IsSignedIn())
{
    <script src="~/scripts/jquery.min.js"></script>
    <script type="text/javascript">
        function remov(id) {
            var jug = confirm("确认删除？");
            if (jug == true) {
                $(function () {
                    var url = "/Admin/DeletePhotos";
                    var params = { "id": id };
                    $.post(url, params, function (data) {
                        if (data == "success") {
                            $("#table-tr-"+id).remove();
                            alert("删除成功");

                        }
                        else {
                            alert("删除失败");
                        }

                    });
                });
            }
        }
    </script>
}
