@model Author
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="page-header">
                <h3>修改作者信息</h3>
            </div>
            <form id="defaultForm" class="form-horizontal" asp-controller="Admin" asp-action="EditAuthor" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    <label class="col-lg-3 control-lable">作者名</label>
                    <div class="col-lg-5">
                        <input type="text" class="form-control" name="AuthorName" id="AuthorName" value="@Model.AuthorName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-lable">Email</label>
                    <div class="col-lg-5">
                        <input type="text" class="form-control" name="Email" id="Email" value="@Model.Email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-5">
                        <input type="submit" value="修改" />
                        <a asp-action="DetailsAuthor" asp-controller="Admin">取消</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
